<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={Plug.CSRFProtection.get_csrf_token()} />
    <title>Admin Dashboard - Mikael Weiss</title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}>
    </script>
    <script>
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
  </head>
  <body class="h-full bg-background-secondary-light dark:bg-background-secondary-dark">
    <.flash_group flash={@flash} />

    <div class="flex h-screen">
      <aside class="w-96 bg-background-primary-light dark:bg-background-primary-dark border-r border-border-light dark:border-border-light-dark overflow-y-auto">
        <div class="p-6 border-b border-border-light dark:border-border-light-dark">
          <div class="flex items-center justify-between mb-6">
            <h1 class="text-xl font-semibold text-text-primary-light dark:text-text-primary-dark tracking-tight">
              Dashboard
            </h1>
            <a
              href={~p"/admin/logout"}
              data-method="delete"
              class="text-sm text-text-secondary-light dark:text-text-secondary-dark hover:text-text-primary-light dark:hover:text-text-primary-dark font-medium transition-colors duration-200"
            >
              Logout
            </a>
          </div>

          <button
            phx-click="new_post"
            class="btn-primary w-full"
          >
            + New Post
          </button>
        </div>

        <div class="p-6">
          <h2 class="text-xs font-semibold text-text-tertiary-light dark:text-text-tertiary-dark uppercase tracking-wider mb-4">
            All Posts
          </h2>

          <%= if Enum.empty?(@posts) do %>
            <div class="text-center py-12">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-background-tertiary-light dark:bg-background-tertiary-dark mb-4">
                <svg class="w-6 h-6 text-text-tertiary-light dark:text-text-tertiary-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark">
                No posts yet
              </p>
            </div>
          <% else %>
            <div class="space-y-2">
              <%= for post <- Enum.sort_by(@posts, & &1.last_updated, {:desc, DateTime}) do %>
                <button
                  phx-click="select_post"
                  phx-value-id={post.id}
                  class={[
                    "w-full text-left p-4 rounded-xl transition-all duration-250 ease-apple group",
                    if(@selected_post && @selected_post.id == post.id,
                      do: "bg-brand/10 dark:bg-brand/20 ring-2 ring-brand dark:ring-brand-light shadow-sm",
                      else: "bg-background-secondary-light dark:bg-background-secondary-dark hover:bg-background-tertiary-light dark:hover:bg-background-tertiary-dark"
                    )
                  ]}
                >
                  <div class="flex items-start justify-between gap-3">
                    <div class="flex-1 min-w-0">
                      <h3 class="text-sm font-semibold text-text-primary-light dark:text-text-primary-dark mb-1.5 truncate">
                        <%= post.title %>
                      </h3>
                      <p class="text-xs text-text-tertiary-light dark:text-text-tertiary-dark font-medium">
                        <%= Calendar.strftime(post.last_updated, "%b %d, %Y") %>
                      </p>
                    </div>
                    <%= if post.published do %>
                      <span class="badge badge-success flex-shrink-0">
                        Published
                      </span>
                    <% else %>
                      <span class="badge badge-draft flex-shrink-0">
                        Draft
                      </span>
                    <% end %>
                  </div>
                </button>
              <% end %>
            </div>
          <% end %>
        </div>
      </aside>

      <main class="flex-1 overflow-y-auto">
        <div class="max-w-5xl mx-auto p-8 lg:p-12">
          <div class="card-refined p-10">
            <h2 class="text-3xl font-semibold text-text-primary-light dark:text-text-primary-dark mb-8 tracking-tight">
              <%= if @view_mode == :new, do: "Create New Post", else: "Edit Post" %>
            </h2>

            <.form
              :let={f}
              for={to_form(@editing_post, as: :post)}
              phx-change="validate"
              phx-submit="save"
              class="space-y-8"
            >
              <div>
                <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                  Title
                </label>
                <input
                  type="text"
                  name="post[title]"
                  value={Phoenix.HTML.Form.input_value(f, :title)}
                  class="input-refined"
                  placeholder="Post title"
                />
                <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :title), &translate_error(&1))}>
                  <%= msg %>
                </.error>
              </div>

              <div>
                <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                  Slug
                </label>
                <input
                  type="text"
                  name="post[slug]"
                  value={Phoenix.HTML.Form.input_value(f, :slug)}
                  class="input-refined"
                  placeholder="post-slug (auto-generated from title)"
                />
                <p class="mt-2 text-xs text-text-tertiary-light dark:text-text-tertiary-dark">
                  Auto-generated from title if left empty
                </p>
                <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :slug), &translate_error(&1))}>
                  <%= msg %>
                </.error>
              </div>

              <div>
                <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                  Excerpt
                </label>
                <textarea
                  name="post[excerpt]"
                  rows="3"
                  class="textarea-refined"
                  placeholder="Brief description for previews and SEO"
                ><%= Phoenix.HTML.Form.input_value(f, :excerpt) %></textarea>
                <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :excerpt), &translate_error(&1))}>
                  <%= msg %>
                </.error>
              </div>

              <div>
                <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                  Content (Markdown)
                </label>
                <textarea
                  name="post[content]"
                  rows="24"
                  class="textarea-refined leading-relaxed"
                  placeholder="Write your post content in Markdown..."
                ><%= Phoenix.HTML.Form.input_value(f, :content) %></textarea>
                <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :content), &translate_error(&1))}>
                  <%= msg %>
                </.error>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                    Cover Image Path
                  </label>
                  <input
                    type="text"
                    name="post[cover_image_path]"
                    value={Phoenix.HTML.Form.input_value(f, :cover_image_path)}
                    class="input-refined"
                    placeholder="/images/blog/cover.jpg"
                  />
                  <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :cover_image_path), &translate_error(&1))}>
                    <%= msg %>
                  </.error>
                </div>

                <div>
                  <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                    Status
                  </label>
                  <label class="flex items-center gap-3 p-4 rounded-xl border border-border-light dark:border-border-light-dark bg-background-secondary-light dark:bg-background-secondary-dark cursor-pointer hover:border-brand dark:hover:border-brand-light transition-colors duration-200">
                    <input type="hidden" name="post[published]" value="false" />
                    <input
                      type="checkbox"
                      name="post[published]"
                      value="true"
                      checked={Phoenix.HTML.Form.input_value(f, :published)}
                      class="w-5 h-5 rounded border-border-medium dark:border-border-medium-dark text-brand focus:ring-brand focus:ring-offset-0"
                    />
                    <span class="text-sm font-medium text-text-primary-light dark:text-text-primary-dark">
                      Published
                    </span>
                  </label>
                </div>
              </div>

              <div class="pt-6 border-t border-border-light dark:border-border-light-dark">
                <h3 class="text-lg font-semibold text-text-primary-light dark:text-text-primary-dark mb-6">
                  SEO Settings
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                      Meta Title
                    </label>
                    <input
                      type="text"
                      name="post[meta_title]"
                      value={Phoenix.HTML.Form.input_value(f, :meta_title)}
                      class="input-refined"
                      placeholder="Defaults to post title"
                    />
                    <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :meta_title), &translate_error(&1))}>
                      <%= msg %>
                    </.error>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark mb-2">
                      Meta Description
                    </label>
                    <input
                      type="text"
                      name="post[meta_description]"
                      value={Phoenix.HTML.Form.input_value(f, :meta_description)}
                      class="input-refined"
                      placeholder="Defaults to excerpt"
                    />
                    <.error :for={msg <- Enum.map(Keyword.get_values(f.errors, :meta_description), &translate_error(&1))}>
                      <%= msg %>
                    </.error>
                  </div>
                </div>
              </div>

              <div class="flex items-center justify-between pt-8 border-t border-border-light dark:border-border-light-dark">
                <div>
                  <%= if @view_mode == :edit do %>
                    <button
                      type="button"
                      phx-click="delete"
                      phx-value-id={@selected_post.id}
                      data-confirm="Are you sure you want to delete this post?"
                      class="px-6 py-3 border border-utility-error/30 dark:border-utility-error/40 text-utility-error rounded-xl hover:bg-utility-error/10 dark:hover:bg-utility-error/20 font-medium transition-all duration-250 ease-apple hover:shadow-sm"
                    >
                      Delete Post
                    </button>
                  <% end %>
                </div>

                <div class="flex gap-3">
                  <%= if @view_mode == :edit do %>
                    <button
                      type="button"
                      phx-click="new_post"
                      class="btn-secondary"
                    >
                      Cancel
                    </button>
                  <% end %>

                  <button
                    type="submit"
                    class="btn-primary"
                  >
                    <%= if @view_mode == :new, do: "Create Post", else: "Update Post" %>
                  </button>
                </div>
              </div>
            </.form>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
